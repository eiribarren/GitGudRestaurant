<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPantallaPrincipal"
    >
    <RelativeLayout
        android:id="@+id/layout_barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:background="@drawable/barra"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@drawable/sombra"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="left"
            >
            <Button
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:id="@+id/boto_EditButton"
                android:background="@drawable/backtocock"
                />

        </LinearLayout>

        <View
            android:layout_width="67dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/circulo" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:elevation="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo_factura"
            app:srcCompat="@drawable/logo" />

    </RelativeLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_factura">

    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="TOTAL"
            android:textSize="30dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/boto_confirmar"
            />
    </LinearLayout>

</LinearLayout>